<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nan.cricketgyan.Player">
    <include layout="@layout/app_bar"> </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="5dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:transitionName="profile"
                android:src="@drawable/sachin"
                android:id="@+id/player_image"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_name"
                android:textSize="20sp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/colorPrimary"
                android:text="Sachin Tendulkar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/player_name"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Country:"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/player_name"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:id="@+id/player_country"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:text="India"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/player_country"
                android:layout_marginLeft="2dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Matches:"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/player_country"
                android:layout_marginLeft="2dp"
                android:textSize="14sp"
                android:id="@+id/player_matches"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:text="India"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/player_matches"
                android:layout_marginLeft="2dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Runs:"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/player_matches"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:id="@+id/player_runs"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:text="India"
                />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Description..."
            android:id="@+id/player_description"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="14sp"/>
    </ScrollView>
</LinearLayout>
